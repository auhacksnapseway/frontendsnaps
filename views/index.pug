doctype html  
html(lang='en')  
head
		title Lobby
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css') 
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js')
body
	h1 Events
	div.container
		a.btn.btn-primary.btn-lg(type='button', href='/create_event') Create new event
		div.list-group
			each val in events
				if val.end_datetime == null
					a(href='/event/' + val.id, class="list-group-item list-group-item-action list-group-item-success")= val.name
			each val in events	
				if val.end_datetime != null
					a(href='/event/' + val.id, class="list-group-item list-group-item-action list-group-item-danger")= val.name
